@{
}
@model List<RecipeViewModel>
<div class="intro-text left-0 bg-faded p-5 rounded">
    <h1 class="text-center">View one recipe</h1>
    <table>
        @if (Model == null || Model.Count()==0)
        {
            <tr>
                <td>There are no recipes with this ingredients</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {

    <tr>
        <td><a href="~/Recipe/Index?id=@item.Id">@item.Name</a></td>
    </tr>
            }
        }
    </table>

</div>