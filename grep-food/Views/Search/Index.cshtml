@{
}

<div class="intro-text left-0 bg-faded p-5 rounded">
    <h1 class="text-center">View one recipe</h1>
    <table>
        @if (Model == null)
        {
            <tr>
                <td>There are no recipes with this ingredients</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Name</td>
                </tr>
            }
        }
    </table>

</div>