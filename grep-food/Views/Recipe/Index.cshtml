@model grep_food.Models.RecipeViewModel

@{
    ViewData["Title"] = Model.Name;
    ViewData["ShowButtons"] = true;

}

<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Business Casual - Start Bootstrap Theme</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/business-casual.min.css" rel="stylesheet">

</head>
<body>











    <div class="intro-text left-0 text-center bg-faded p-5 rounded">
        <h1>
            @Model.Name
        </h1>    <br />


        <img src="@Model.Image" width="300" /><br />
        <div class="RecipeContents">
            Time to prepare: @Model.Time<br />
            <h3>

                Ingredients:
            </h3>

            @foreach (var ing in Model.Ingredients)
            {

                <input type="checkbox" value="false" /> @ing.Name <br />
            }



            <h3>Instructions:</h3>


            @for (int i = 0; i < Model.Instructions.Length; i++)
            {<p>
                    Step @(i+1) :
                    @Model.Instructions[i]
                </p>
            }



        </div>
    </div>


    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>



</body>

</html>
@{
    Console.WriteLine(Model.Ingredients);
}
