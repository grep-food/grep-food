@model grep_food.Models.RecipeViewModel

@{
    ViewData["Title"] = Model.Name;
    ViewData["ShowButtons"] = true;

}

<div class="intro-text left-0 bg-faded p-5 rounded">
    <h1 class="text-center">
        @Model.Name
    </h1>    <br />


    <img src="@Model.Image" width="300" /><br />
    <div class="RecipeContents">
        Time to prepare: @Model.Time<br />
        <h3>

            Ingredients:
        </h3>

        @foreach (var ing in Model.Ingredients)
        {

            <input type="checkbox" value="false" /> @ing.Name <br />
        }



        <h3>Instructions:</h3>


        @for (int i = 0; i < Model.Instructions.Length; i++)
        {<p>
                Step @(i+1) :
                @Model.Instructions[i]
            </p>
        }



    </div>
</div>
<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
@{
    Console.WriteLine(Model.Ingredients);
}
